
x = int(input())

contador = 0

for i in range(x):
    a = input()
    if a[0] == "+" and a[1] == "+":
        contador += 1
    
    elif a[1] == "+" and a[2] == "+":
        contador += 1

    elif a[0] == "-" and a[1] == "-":
        contador -= 1
    
    elif a[1] == "-" and a[2] == "-":
        contador -= 1

    else:
        contador = 0

print(contador)